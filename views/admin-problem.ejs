<div ng-include="'/views/navbar'"></div>

<div class='container'>
  <a class="active btn btn-primary" href='/#/admin/problem/edit'><i class="glyphicon glyphicon-plus"></i>Add Problem</a>
  <div ng-include="'/views/pagination.ejs'"></div>
  <!-- -->

  <table class='table'>
    <thead>
      <th></th>
      <th></th>
      <th class='col-sm-1'>ID</th>
      <th class='col-sm-11'>Title</th>
    </thead>
    <tbody>
      <tr ng-repeat="problem in problems">
        <td>
          <a href='/#/admin/problem/edit'><i class='fa fa-pencil-square-o' style='font-size: 20px;'></i></a>
        </td>
        <td>
          <a style="font-size: 20px;" href='javascript:void(0);' class='fa fa-trash-o' ng-click='open(problem.title,problem.problemId)'></a>
        </td>
        <td class='col-sm-1'>{{problem.problemId}}</td>
        <td class='col-sm-11'><a href="/#/problem/show/{{problem.problemId}}">{{problem.title}}</td>
        </tr>
      </tbody>
    </table>

	<script type="text/ng-template" id="confirmModal.html">
		<div class="modal-header">
			<h3 class="modal-title">Delete {{title}}</h3>
		</div>
		<div class="modal-body">
			<p>Are you sure to delete problem: {{title}}</p>
		</div>
		<div class="modal-footer">
			<button class="btn btn-default" type="button" ng-click="ok()" ng-disabled='isSubmitting'>Submit</button>
			<button class="btn btn-default" type="button" ng-click="cancel()">Cancel</button>
		</div>
	</script>
</div>
