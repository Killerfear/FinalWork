<div ng-include="'/views/navbar'"></div>

<div class='container'>
  <a class="active btn btn-primary" href='/#/admin/contest/edit'><i class="glyphicon glyphicon-plus"></i>Add Contest</a>
  <div ng-include="'/views/pagination.ejs'"></div>
  <!-- -->

  <table class='table'>
    <thead>
      <th></th>
      <th></th>
      <th class='col-sm-1'>ID</th>
      <th class='col-sm-11'>Title</th>
    </thead>
    <tbody>
      <tr ng-repeat="contest in contests">
        <td>
          <a class='glyphicon glyphicon-edit' href='/#/admin/contest/edit?contestId={{contest.contestId}}'></a>
        </td>
        <td>
          <a class='glyphicon glyphicon-trash' href='javascript:void(0);' ng-click='open(contest.title,contest.contestId)'></a>
        </td>
        <td class='col-sm-1'>{{contest.contestId}}</td>
        <td class='col-sm-11'><a href="/#/contest/show/{{contest.contestId}}">{{contest.title}}</td>
        </tr>
      </tbody>
    </table>

	<script type="text/ng-template" id="confirmModal.html">
		<div class="modal-header">
			<h3 class="modal-title">Delete {{title}}</h3>
		</div>
		<div class="modal-body">
			<p>Are you sure to delete contest: {{title}}</p>
		</div>
		<div class="modal-footer">
			<button class="btn btn-default" type="button" ng-click="ok()">Yes</button>
			<button class="btn btn-default" type="button" ng-click="cancel()">No</button>
		</div>
	</script>
</div>
