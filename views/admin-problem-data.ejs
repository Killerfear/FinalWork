
<div ng-show="$root.isAdmin">
  <script src="http://cdn.bootcss.com/bootstrap-filestyle/1.2.1/bootstrap-filestyle.min.js"></script>
  <div class='col-md-4'>
    <input type='file' ngf-multiple='true' class='filestyle' ngf-select data-badge='false' data-input='false' ngf-change='upload($files)'
    ngf-validate="{size: {min: 0, max: '10MB'} }">
  </div>
  
  <br />
  <br />
  <br />
  <div class='container'>
    <table class='table'>
      <thead>
        <th>fileName</th>
        <th>size</th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr ng-repeat='file in files'>
          <td>{{file.fileName}}</td>
          <td>{{file.fileSize}}</td>
          <td><a class='glyphicon glyphicon-edit' href='javascript:void(0);' ng-click='openEdit(file.fileName)'></a></td>
          <td><a class='glyphicon glyphicon-trash' href='javascript:void(0);' ng-click='openDelete(file)'></a></td>
        </tr>
      </tbody>
    </table>
  </div>

  <script type="text/ng-template" id="editDataModal.html">
  <div class="modal-header">
  <h3 class="modal-title" ng-model='data.fileName'>{{data.fileName}}</h3>
  </div>
  <div class="modal-body">
  <textarea ng-model='data.text' style="width:100%;height:400px;"></textarea>
  </div>
  <div class="modal-footer">
  <button class="btn btn-default" type="button" ng-click="save()">Save</button>
  <button class="btn btn-default" type="button" ng-click="cancel()">Cancel</button>
  </div>
  </script>

  <script type="text/ng-template" id="deleteDataModal.html">
  <div class="modal-header">
  <h3 class="modal-title">{{file.fileName}}</h3>
  </div>
  <div class="modal-body">
  Are you sure to delete {{file.fileName}} ?
  </div>
  <div class="modal-footer">
  <button class="btn btn-default" type="button" ng-click="yes()">Yes</button>
  <button class="btn btn-default" type="button" ng-click="no()">No</button>
  </div>
  </script>

</div>
