<div ng-include="'/views/navbar.ejs'"> </div>

<div style="width:50%;margin: 0 auto;vertical-align:middle;">
    <h2 class='form-signin-heading text-center'>Sign in</h2>
    <br />
    <div class='alert alert-danger' ng-show='isLoginError'>{{loginError}}</div>

    <div class='form-group'>
      <div class='input-group'>
        <span class='input-group-addon'><i class='fa fa-user' style="width: 14px;"></i></span>
        <input type='text' ng-model='username' class='form-control' placeholder='Username' required autofocus>
      </div>
    </div>


    <div class='form-group'>
      <div class='input-group'>
        <span class='input-group-addon'><i class='fa fa-key'></i></span>
        <input type='password' ng-model='password' class='form-control' placeholder='Password' required />
      </div>
    </div>

    <button class='btn btn-lg btn-primary btn-block' ng-disabled='isSubmitting' ng-click='login()'>Sign in</button>
    <br />
    <i class='fa fa-arrow-circle-right'><a href='/#/user/signup'> Register</a> </i>
  </div>
